<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_question_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small"
            android:textSize="@dimen/text_size_medium"
            tools:text="Question 1"
            />

        <TextView
            android:id="@+id/tv_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimarylight"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_medium"
            android:textColor="@color/colorPrimarytext"
            android:textSize="@dimen/text_size_small"
            tools:text="@string/quiz_one"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/answer_group"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb_anwers_one"
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_medium"
                    android:onClick="onAnswerChoose"
                    tools:text="@string/answer_one_for_quiz_one"/>
                <RadioButton
                    android:id="@+id/rb_anwers_two"
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:onClick="onAnswerChoose"
                    tools:text="@string/answer_two_for_quiz_one"
                    />
                <RadioButton
                    android:id="@+id/rb_anwers_three"
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:onClick="onAnswerChoose"
                    tools:text="@string/answer_three_for_quiz_one"
                    />
                <RadioButton
                    android:id="@+id/rb_anwers_four"
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:onClick="onAnswerChoose"
                    tools:text="@string/answer_four_for_quiz_one"
                    />
            </RadioGroup>
            <LinearLayout
                android:id="@+id/linear_layout_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_medium"
                    android:id="@+id/cb_answer_one"
                    android:onClick="cbOnAnswerChoose"/>
                <CheckBox
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:id="@+id/cb_answer_two"
                    android:onClick="cbOnAnswerChoose"/>
                <CheckBox
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:id="@+id/cb_answer_three"
                    android:onClick="cbOnAnswerChoose"/>
                <CheckBox
                    style="@style/style_radio_button"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:id="@+id/cb_answer_four"
                    android:onClick="cbOnAnswerChoose"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:hint="@string/et_input_hint"
                android:inputType="text"
                android:id="@+id/et_answer"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_marginTop="@dimen/padding_small"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_submit"
                style="@style/button_style"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/padding_large"
                android:onClick="btn_submit"
                android:text="@string/btn_submit"
                />

            <Button
                android:id="@+id/btn_next"
                style="@style/button_style"
                android:layout_marginLeft="72dp"
                android:onClick="btn_next"
                android:text="@string/btn_next"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="72dp"/>
            <Button
                style="@style/button_style"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:onClick="btn_again"
                android:text="@string/btn_again"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>